<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DidILockMy.Views.LockView"
             HeightRequest="150" 
             WidthRequest="150" 
             MinimumHeightRequest="150" 
             MinimumWidthRequest="150">
  <ContentView.Content>
        <RelativeLayout>
            <ContentView 
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                    Property=Height,Factor=1,Constant=0}" 
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                    Property=Width, Factor=1,Constant=0}">
                <BoxView Color="Red"></BoxView>
            </ContentView>
            <ContentView 
                RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
                    Property=Height,Factor=1,Constant=0}" 
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
                    Property=Width, Factor=1,Constant=0}">
                <Label Text="Hello Xamarin.Forms!" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            </ContentView>
        </RelativeLayout>
  </ContentView.Content>
</ContentView>